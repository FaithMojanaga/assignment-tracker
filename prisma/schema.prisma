datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Assignment {
  id    Int    @id @default(autoincrement())
  name  String
  tasks Task[]
}

model Task {
  id           Int       @id @default(autoincrement())
  assignmentId Int
  title        String
  deadline     String
  completed    Boolean   @default(false)
  completedAt  DateTime?

  assignment Assignment @relation(fields: [assignmentId], references: [id])
}
